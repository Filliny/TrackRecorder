<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginFragment">

    <data>
        <import type="com.example.trackrecorder.ui.register.RegisterFragmentViewModel"/>

        <variable
            name="model_register"
            type="RegisterFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="30dp"
        android:padding="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/emailInput"
                style="@style/LoginLabel"/>

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Enter your E-mail"
                app:layout_constraintTop_toBottomOf="@id/emailLabel"
                app:layout_constraintBottom_toTopOf="@id/passwordLabel"
                android:text="@={model_register.userCandidate.email}"
                />

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                app:layout_constraintTop_toBottomOf="@id/emailInput"
                app:layout_constraintBottom_toTopOf="@id/passwordInput"
                style="@style/LoginLabel"/>

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:inputType="textPassword"
                app:layout_constraintTop_toBottomOf="@id/passwordLabel"
                app:layout_constraintBottom_toTopOf="@id/buttonSignIn"
                android:text="@={model_register.userCandidate.password}"/>

            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER"
                app:layout_constraintTop_toBottomOf="@id/passwordInput"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="20dp"
                android:onClick="@{()->model_register.registerButtonPress()}"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>